#!/bin/bash

# BASH PROFILE
ln -vfs ~/.dotfiles/debian-laptop/bashrc ~/.bashrc
ln -vfs ~/.dotfiles/debian-laptop/bash_profile ~/.bash_profile
ln -vfs ~/.dotfiles/debian-laptop/bash_aliases ~/.bash_aliases
ln -vfs ~/.dotfiles/debian-laptop/xinitrc ~/.xinitrc
ln -vfs ~/.dotfiles/debian-laptop/Xdefaults ~/.Xdefaults

# VIM FILES
if [ ! -L ~/.vim ]; then
  ln -vfs ~/.dotfiles/debian-laptop/vim ~/.vim
else
	echo .vim is already a symlink
fi

ln -vfs ~/.dotfiles/debian-laptop/vim/vimrc ~/.vimrc
ln -vfs ~/.dotfiles/debian-laptop/vim/gvimrc ~/.gvimrc

# GEMRC
ln -vfs ~/.dotfiles/debian-laptop/etc/gemrc ~/.gemrc
ln -vfs ~/.dotfiles/debian-laptop/etc/irbrc ~/.irbrc

# SCREEN
ln -vfs ~/.dotfiles/debian-laptop/etc/screenrc ~/.screenrc

ln -vfs ~/.dotfiles/debian-laptop/tmux.conf ~/.tmux.conf

if [ ! -L ~/.weechat ]; then
	ln -vfs ~/.dotfiles/debian-laptop/weechat ~/.weechat
else
	echo .weechat is already a symlink
fi

if [ ! -L ~/.i3 ]; then
	ln -vfs ~/.dotfiles/debian-laptop/i3 ~/.i3
else
	echo .i3 is already a symlink
fi

ln -vfs ~/.dotfiles/debian-laptop/git-completion ~/.git-completion

# CREATE VIM BACKUP DIR
mkdir -p ~/.backup/vim/swap
