#!/bin/bash

# run those when x start. i3 will run it.

# needed for i3
#exec setxkbmap -option grp:alt_shift_toggle "us,dvorak" -option grp_led:caps
i3-msg --no-startup-id 'workspace 1;exec firefox'
i3-msg --no-startup-id 'workspace 2;exec google-chrome'

setxkbmap dvorak

# turn capslock into esc
xmodmap -e 'clear Lock' -e 'keycode 0x42 = Escape'
