#!/bin/bash

# Install Node.js
# Param: version. something like 0.15.10

echo "Installing Node"

if [ $# -eq 0 ]
  then
    echo "Please pass the node version (ie - 0.15.10)."
    exit 1
fi

currentVersion=$(node --version)

# if [ $currentVersion = v$1 ]; then
#   echo Node $1 already installed.
#   exit 0
# fi

version=$1
echo Installing Node version $version

if [ -d "/tmp/node" ]; then
  rm -r /tmp/node
fi

cd /tmp
git clone https://github.com/joyent/node.git
cd node
git checkout v$1
./configure
make
make install
rm -r /tmp/node
