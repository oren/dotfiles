#!/bin/bash

# BASH PROFILE
ln -vfs ~/.dotfiles/ubuntu-x120e/bashrc ~/.bashrc
ln -vfs ~/.dotfiles/ubuntu-x120e/bash_profile ~/.bash_profile
ln -vfs ~/.dotfiles/ubuntu-x120e/bash_aliases ~/.bash_aliases
ln -vfs ~/.dotfiles/ubuntu-x120e/xinitrc ~/.xinitrc
ln -vfs ~/.dotfiles/ubuntu-x120e/Xresources ~/.Xresources

# VIM FILES
if [ ! -L ~/.vim ]; then
  ln -vfs ~/.dotfiles/ubuntu-x120e/vim ~/.vim
else
	echo .vim is already a symlink
fi

ln -vfs ~/.dotfiles/ubuntu-x120e/vim/vimrc ~/.vimrc
ln -vfs ~/.dotfiles/ubuntu-x120e/vim/gvimrc ~/.gvimrc

# GEMRC
ln -vfs ~/.dotfiles/ubuntu-x120e/etc/gemrc ~/.gemrc
ln -vfs ~/.dotfiles/ubuntu-x120e/etc/irbrc ~/.irbrc

# SCREEN
ln -vfs ~/.dotfiles/ubuntu-x120e/etc/screenrc ~/.screenrc

ln -vfs ~/.dotfiles/ubuntu-x120e/tmux.conf ~/.tmux.conf

ln -vfs ~/.dotfiles/ubuntu-x120e/pentadactylrc ~/.pentadactylrc

if [ ! -L ~/.weechat ]; then
	ln -vfs ~/.dotfiles/ubuntu-x120e/weechat ~/.weechat
else
	echo .weechat is already a symlink
fi

if [ ! -L ~/.i3 ]; then
	ln -vfs ~/.dotfiles/ubuntu-x120e/i3 ~/.i3
else
	echo .i3 is already a symlink
fi

# GIT
ln -vfs ~/.dotfiles/ubuntu-x120e/git-completion ~/.git-completion
ln -vfs ~/.dotfiles/ubuntu-x120e/gitconfig ~/.gitconfig

# CREATE VIM BACKUP DIR
mkdir -p ~/.backup/vim/swap
