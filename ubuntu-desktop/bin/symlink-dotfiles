#!/bin/bash

# BASH PROFILE
ln -vfs ~/.dotfiles/ubuntu-desktop/bashrc ~/.bashrc
ln -vfs ~/.dotfiles/ubuntu-desktop/bash_profile ~/.bash_profile
ln -vfs ~/.dotfiles/ubuntu-desktop/bash_aliases ~/.bash_aliases
ln -vfs ~/.dotfiles/ubuntu-desktop/xinitrc ~/.xinitrc
ln -vfs ~/.dotfiles/ubuntu-desktop/Xresources ~/.Xresources

# VIM FILES
if [ ! -L ~/.vim ]; then
  ln -vfs ~/.dotfiles/ubuntu-desktop/vim ~/.vim
else
	echo .vim is already a symlink
fi

ln -vfs ~/.dotfiles/ubuntu-desktop/vim/vimrc ~/.vimrc
ln -vfs ~/.dotfiles/ubuntu-desktop/vim/gvimrc ~/.gvimrc

# GEMRC
ln -vfs ~/.dotfiles/ubuntu-desktop/etc/gemrc ~/.gemrc
ln -vfs ~/.dotfiles/ubuntu-desktop/etc/irbrc ~/.irbrc

# SCREEN
ln -vfs ~/.dotfiles/ubuntu-desktop/etc/screenrc ~/.screenrc

ln -vfs ~/.dotfiles/ubuntu-desktop/tmux.conf ~/.tmux.conf

ln -vfs ~/.dotfiles/ubuntu-desktop/pentadactylrc ~/.pentadactylrc

if [ ! -L ~/.weechat ]; then
	ln -vfs ~/.dotfiles/ubuntu-desktop/weechat ~/.weechat
else
	echo .weechat is already a symlink
fi

if [ ! -L ~/.i3 ]; then
	ln -vfs ~/.dotfiles/ubuntu-desktop/i3 ~/.i3
else
	echo .i3 is already a symlink
fi

# GIT
ln -vfs ~/.dotfiles/ubuntu-desktop/git-completion ~/.git-completion
ln -vfs ~/.dotfiles/ubuntu-desktop/gitconfig ~/.gitconfig

# CREATE VIM BACKUP DIR
mkdir -p ~/.backup/vim/swap
