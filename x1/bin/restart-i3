#!/bin/bash

# i3 run this file when i3 start/restart.

xkbset m  # not sure why, but without it the xmodmap will not work
# xmodmap -e "keycode 110 = Pointer_Button1"   # Home -> left click
# xmodmap -e "keycode 115 = Pointer_Button2"   # End -> middle click

if [ -s ~/.Xmodmap ]; then
  xmodmap ~/.Xmodmap
fi

# mouse speed
xinput --set-prop "Logitech USB Trackball" "Device Accel Constant Deceleration" 0.3

# trackpoint speed
xinput --set-prop "TPPS/2 IBM TrackPoint" "Device Accel Constant Deceleration" 0.2

# mouse speed
xinput --set-prop "Logitech Optical USB Mouse" "Device Accel Constant Deceleration" 0.3
