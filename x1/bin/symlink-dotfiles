#!/bin/bash

# before running this clone the misc project

# bash profile
ln -vfs ~/.dotfiles/x1/bashrc ~/.bashrc
ln -vfs ~/.dotfiles/x1/bash_aliases ~/.bash_aliases
ln -vfs ~/.dotfiles/x1/Xresources ~/.Xresources

# vim files
if [ ! -L ~/.vim ]; then
	ln -vfs ~/.dotfiles/x1/vim ~/.vim
else
	echo .vim is already a symlink
fi

# create vim backup dir
mkdir -p ~/.backup/vim/swap

ln -vfs ~/.dotfiles/x1/vim/vimrc ~/.vimrc
ln -vfs ~/.dotfiles/x1/vim/gvimrc ~/.gvimrc

# screen
ln -vfs ~/.dotfiles/x1/etc/screenrc ~/.screenrc

# tmux
ln -vfs ~/.dotfiles/x1/tmux.conf ~/.tmux.conf

# weechat
if [ ! -L ~/.weechat ]; then
	ln -vfs ~/.dotfiles/x1/weechat ~/.weechat
else
	echo .weechat is already a symlink
fi

ln -vfs ~/misc/config/weechat-irc.conf ~/.weechat/irc.conf

# git
ln -vfs ~/.dotfiles/x1/git-completion ~/.git-completion
ln -vfs ~/.dotfiles/x1/gitconfig ~/.gitconfig

# newsbeuter
ln -vfs ~/misc/config/newsbeuter-urls ~/.newsbeuter/urls
ln -vfs ~/.dotfiles/x1/newsbeuter-config ~/.newsbeuter/config

# compton (remove black box of fcitx)
# ln -vfs ~/.dotfiles/x1/compton.conf ~/.compton.conf

# pentadactyl
ln -vfs ~/.dotfiles/x1/pentadactylrc ~/.pentadactylrc

# npm
ln -vfs ~/.dotfiles/x1/npmrc ~/.npmrc

# mpv
if [ ! -L ~/.config/mpv ]; then
	ln -vfs ~/.dotfiles/x1/mpv ~/.config/mpv
else
	echo mpv is already a symlink
fi

if [ ! -L ~/.i3 ]; then
	ln -vfs ~/.dotfiles/x1/i3 ~/.i3
else
	echo .i3 is already a symlink
fi
