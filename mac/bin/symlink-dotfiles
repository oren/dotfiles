#!/bin/bash

# BASH PROFILE
ln -vfs ~/.dotfiles/mac/bashrc ~/.bashrc
ln -vfs ~/.dotfiles/mac/bash_profile ~/.bash_profile

# VIM FILES
ln -vfs ~/.dotfiles/mac/vim ~/.vim
ln -vfs ~/.dotfiles/mac/vim/vimrc ~/.vimrc
ln -vfs ~/.dotfiles/mac/vim/gvimrc ~/.gvimrc

# GEMRC
ln -vfs ~/.dotfiles/mac/etc/gemrc ~/.gemrc
ln -vfs ~/.dotfiles/mac/etc/irbrc ~/.irbrc

# SCREEN
ln -vfs ~/.dotfiles/mac/etc/screenrc ~/.screenrc

# CREATE VIM BACKUP DIR
mkdir -p ~/.backup/vim/swap
