#!/bin/bash

# Install ag

echo "Installing ag"

# ag=$(command -v ag)
# 
# if [ $ag != '' ]; then
#   echo ag already installed.
#   exit 0
# fi

if [ -d "/tmp/ag" ]; then
  rm -r /tmp/ag
fi

apt-get install -y automake pkg-config libpcre3-dev zlib1g-dev liblzma-dev
cd /tmp
su oren -c "git clone git@github.com:ggreer/the_silver_searcher.git"
cd the_silver_searcher
./build.sh
make install
rm -r /tmp/the_silver_searcher
