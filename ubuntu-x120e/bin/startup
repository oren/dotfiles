#!/bin/bash

# run those when x start. i3 will run it.

# needed for i3
# i3-msg 'workspace 1;exec firefox'
i3-msg 'workspace 1;exec chromium-browser'

# turn home into insert
xmodmap -e 'keycode 110 = Insert NoSymbol Insert'

# revert
xmodmap -e 'keycode 110 = Home NoSymbol Home'

xset r rate 200 60 # typematic delay and rate
xrdb ~/.Xresources
# fcitx-qimpanel
setxkbmap dvorak

# fix ui issue with chinese language switch
# compton &
