#!/bin/bash

# BASH PROFILE
ln -vfs ~/.dotfiles/ubuntu/bashrc ~/.bashrc
ln -vfs ~/.dotfiles/ubuntu/bash_profile ~/.bash_profile
ln -vfs ~/.dotfiles/ubuntu/bash_aliases ~/.bash_aliases
ln -vfs ~/.dotfiles/ubuntu/xinitrc ~/.xinitrc
ln -vfs ~/.dotfiles/ubuntu/Xresources ~/.Xresources

# VIM FILES
if [ ! -L ~/.vim ]; then
  ln -vfs ~/.dotfiles/ubuntu/vim ~/.vim
else
	echo .vim is already a symlink
fi

ln -vfs ~/.dotfiles/ubuntu/vim/vimrc ~/.vimrc
ln -vfs ~/.dotfiles/ubuntu/vim/gvimrc ~/.gvimrc

# GEMRC
ln -vfs ~/.dotfiles/ubuntu/etc/gemrc ~/.gemrc
ln -vfs ~/.dotfiles/ubuntu/etc/irbrc ~/.irbrc

# SCREEN
ln -vfs ~/.dotfiles/ubuntu/etc/screenrc ~/.screenrc

ln -vfs ~/.dotfiles/ubuntu/tmux.conf ~/.tmux.conf

ln -vfs ~/.dotfiles/ubuntu/pentadactylrc ~/.pentadactylrc

if [ ! -L ~/.weechat ]; then
	ln -vfs ~/.dotfiles/ubuntu/weechat ~/.weechat
else
	echo .weechat is already a symlink
fi

if [ ! -L ~/.i3 ]; then
	ln -vfs ~/.dotfiles/ubuntu/i3 ~/.i3
else
	echo .i3 is already a symlink
fi

# GIT
ln -vfs ~/.dotfiles/ubuntu/git-completion ~/.git-completion
ln -vfs ~/.dotfiles/ubuntu/gitconfig ~/.gitconfig

# CREATE VIM BACKUP DIR
mkdir -p ~/.backup/vim/swap
