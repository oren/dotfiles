#!/bin/bash

# Install Go
# Param: version. something like 0.15.10

echo "Installing Go"

if [ $# -eq 0 ]
  then
    echo "Please pass the Go version (ie - 0.15.10)."
    exit 1
fi

currentVersion=$(go --version)

if [ $currentVersion = v$1 ]; then
  echo Go $1 already installed.
  exit 0
fi

version=$1
echo Installing Go version $version

if [ -d "/tmp/go" ]; then
  rm -r /tmp/go
  mkdir /tmp/go
fi

cd /user/local
wget http://go.googlecode.com/files/go$1.linux-amd64.tar.gz
tar xvfz go$1.linux-amd64.tar.gz
rm go$1.linux-amd64.tar.gz
